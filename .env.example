# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
MONGO_URI=mongodb://localhost:27017/campverse
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_app_specific_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# API Keys
ML_API_KEY=your_ml_api_key_here
ML_CERTIFICATE_API_URL=https://ml-certificate-api.example.com

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5001

# Storage
STORAGE_PROVIDER=firebase
FIREBASE_STORAGE_BUCKET=your-firebase-bucket.appspot.com

# Environment
NODE_ENV=development
PORT=5001
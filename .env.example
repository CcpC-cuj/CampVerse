# CampVerse Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ==================== GOOGLE OAUTH ====================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ==================== DATABASE ====================
MONGO_URI=mongodb://mongo:27017/campverse
REDIS_URL=redis://redis:6379

# ==================== SECURITY ====================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here

# ==================== EMAIL ====================
# Nodemailer (for local development)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Resend (for production on Render.com - uses HTTP API, no SMTP needed)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=CampVerse <noreply@yourdomain.com>

# ==================== ML SERVICE ====================
ML_API_KEY=your_ml_api_key
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5001

# ==================== STORAGE ====================
STORAGE_PROVIDER=firebase
FIREBASE_STORAGE_BUCKET=your_bucket.appspot.com

# Supabase Storage (for production - set in deployment environment)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_key
# SUPABASE_BUCKET_NAME=campverse

# ==================== ML SERVICES ====================
VITE_CERTIFICATE_DESIGNER_URL=http://localhost:8000/ui
